@{
    Layout = null;
    int i = 0;
}
@model List<TelecomFoViewModel>
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <title>Tamamlanan Telekom Basvurlar @DateTime.Now.ToString()</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/images/cop.ico" /> @*site iconu değiştirir*@
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="~/css/buttons.bootstrap4.min.css">
    <link rel="stylesheet" href="~/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KgysProjectIdentity.Web.styles.css" asp-append-version="true" />
</head>
<body class="container-responsive">
    <div class="row">
        <div class="container-fluid">
            <header>
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black border-bottom box-shadow mb-3">
                    <div class="container-fluid">
                        <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">BTH Proje Takip</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1">

                                <partial name="_navBarDropBox"></partial>

                                <partial name="_navBarKgysRequestedMenu"></partial>

                            </ul>
                            @*navbar partial view*@
                            <partial name="_navBarLoginMenu"></partial>
                        </div>
                    </div>
                </nav>
            </header>
        </div>
    </div>

    <table id="example" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
        <thead>
            <tr>
                <th>Sıra No</th>
                <th>EGM onay EBYS No</th>
                <th>Başvuru Tipi</th>
                <th>İlçe Adı</th>
                <th>Lokasyon Adı</th>
                <th>Devre No</th>
                <th>Vlan</th>
                <th>Ip Adresi</th>
                <th>Koordinat</th>
                <th>Başvuru Tarihi</th>
                <th>SLA Başlangıç Tarihi</th>
                <th>EPYM Durumu</th>
                <th>EOM Durumu</th>
                <th>MPLS Operasyon Durumu</th>
                <th>MPLS NMS Durumu</th>
                <th>EGM Kontrol</th>
                <th>Açıklama</th>
                <th>TT Birimi</th>
                <th>Kuppa Tarihi</th>
                <th>Kuppa Id</th>
                <th>Kuppa Durumu</th>
                <th>Kuppa Mesafesi</th>
                <th>Kuppa Bedeli</th>
                <th>Güncellenme Tarihi</th>
                <th>Güncelleyen Personel</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                @if (item.CheckEGM == "Tamamlandı")
                {
                    string sepmys = TableRowsColor.RowsColor(item.EpymStatus!);
                    string seom = TableRowsColor.RowsColor(item.EomStatus!);
                    string smplso = TableRowsColor.RowsColor(item.MplsOperationStatus!);
                    string smplsn = TableRowsColor.RowsColor(item.MplsNmsStatus!);
                    string schk = TableRowsColor.RowsColor(item.CheckEGM!);
                    i++;
                    <tr>
                        <th scope="row">@i</th>
                        <td>@item.EbysNumber</td>
                        <td>@item.Aplication</td>
                        <td>@item.District</td>
                        <td>@item.Name</td>
                        <td>@item.TemosNumber</td>
                        <td>@item.Vlan</td>
                        <td>@item.IpAddress</td>
                        <td>@item.Coordinate</td>
                        <td>
                            @if (item.CreatedTime != null)
                            {
                                @item.CreatedTime.Value.ToString("dd/MM/yyyy")
                            }
                        </td>
                        <td>
                            @if (item.SlaStartTime != null)
                            {
                                @item.SlaStartTime.Value.ToString("dd/MM/yyyy")
                            }
                        </td>
                        <td class="@sepmys">@item.EpymStatus</td>
                        <td class="@seom">@item.EomStatus</td>
                        <td class="@smplso">@item.MplsOperationStatus</td>
                        <td class="@smplsn">@item.MplsNmsStatus</td>
                        <td class="@schk">@item.CheckEGM</td>
                        <td>@item.Description</td>
                        <td>@item.Team</td>
                        <td>@item.UpdatedTime</td>
                        <td>@item.UpdatedUser</td>
                        <td>
                            @if (item.KuppaDate != null)
                            {
                                @item.KuppaDate.Value.ToString("dd/MM/yyyy")
                            }
                        </td>
                        <td>@item.KuppaID</td>
                        <td>@item.KuppaPStatus</td>
                        <td>@item.KuppaDistance</td>
                        <td>@item.KuppaPrice</td>
                    </tr>
                }
            }
        </tbody>
    </table>



</body>
</html>
<<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/jquery-3.7.0.min.js" type="text/javascript"></script>
<script src="~/js/slick.js"></script>
<script src="~/js/jquery-3.5.1.js"></script>
<script src="~/js/jquery.dataTables.min.js"></script>
<script src="~/js/dataTables.bootstrap5.min.js"></script>
<script src="~/js/dataTables.buttons.min.js"></script>
<script src="~/js/buttons.bootstrap4.min.js"></script>
<script src="~/js/jszip.min.js"></script>
<script src="~/js/pdfmake.min.js"></script>
<script src="~/js/vfs_fonts.js"></script>
<script src="~/js/buttons.html5.min.js"></script>
<script src="~/js/buttons.print.min.js"></script>
<script src="~/js/buttons.colVis.min.js"></script>
<script src="~/js/dataTables.responsive.min.js"></script>
<script src="~/js/responsive.bootstrap4.min.js"></script>
<script>
    $(document).ready(function () {
        var table = $('#example').DataTable({
            lengthChange: true,
            buttons: ['excel', 'colvis']
        });

        table.buttons().container().appendTo('#example_wrapper .col-md-6:eq(0)');
    });
</script>
