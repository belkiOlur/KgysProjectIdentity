                        {
                            <a role="button" asp-controller="KgysRequested" asp-action="KgysPlannedDetails" asp-route-id="@modell.Id"> @modell.KgysName</a>
                        }
                        else
                        {
                            @yok
                        }

                    </td>
                    <td>

                        @if (ViewBag.District == modell.District && modell.LastStatus == "Talep" && modell.RequestType == "KGYS")
                        {
                            <a role="button" asp-controller="KgysRequested" asp-action="KgysRequestDetails" asp-route-id="@modell.Id"> @modell.KgysName</a>
                        }
                        else
                        {
                            @yok
                        }

                    </td>
                   
                    <td>
                        @if (ViewBag.District == modell.District && modell.LastStatus == "Talep" && modell.RequestType == "PTS")
                        {
                            <a role="button" asp-controller="KgysRequested" asp-action="KgysRequestDetails" asp-route-id="@modell.Id"> @modell.KgysName</a>
                        }
                        else
                        {
                            @yok
                        }
                    </td>
                    <td>

                        @if (User.Identity!.IsAuthenticated)
                        {
                            @if (User.HasClaim(x => x.Value == "Silme"))
                            {
                                <a type="button" data-bs-toggle="modal" data-bs-target="#staticBackdrop" class="btn btn-outline-secondary d-md-block" data-bs-id="@modell.Id">Sil</a>
                            }
                            <a class="btn btn-outline-secondary d-md-block" role="button" asp-controller="KgysRequested" asp-action="Update" asp-route-id="@modell.Id">Güncelle</a>
                        }
                    </td>


                }
            </tr>
        }
        <tr style="font-size:large; text-align:center;">

            <td><b>Toplam</b></td>
            <td>
                <b>
                    @foreach (var modell in ViewBag.KgysPlanned)
                    {
                        if (ViewBag.District == modell.District && modell.LastStatus == "Mevcut" && modell.RequestType == "KGYS")
                        {
                            count++;
                        }

                    }
                    @count
                    @{
                        count = 0;
                    }
                </b>
            </td>
            <td>
                <b>
                    @foreach (var modell in ViewBag.KgysPlanned)
                    {
                        if (ViewBag.District == modell.District && modell.LastStatus == "Mevcut" && modell.RequestType == "PTS")
                        {
                            count++;
                        }

                    }
                    @count
                </b>
            </td>
            <td>
                <b>
                    @foreach (var modell in ViewBag.KgysPlanned)
                    {
                        if (ViewBag.District == modell.District && modell.LastStatus == "Planlanan" && modell.RequestType == "KGYS")
                        {
                            planned++;
                        }

                    }
                    @planned
                    @{
                        planned = 0;
                    }
                </b>
            </td>
            <td>
                <b>
                    @foreach (var modell in ViewBag.KgysPlanned)
                    {
                        if (ViewBag.District == modell.District && modell.LastStatus == "Planlanan" && modell.RequestType == "PTS")
