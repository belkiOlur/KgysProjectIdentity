@{
    ViewData["Title"] = "DistrictRequestIndex";
    int i = 0;
    int count = 0;
    int planned = 0;
    int request = 0;
    string yok = "-";
}

@model KgysRequestViewModel

<div class="row">
    <div class="col-md-5 offset-md-4">
        <h1>@ViewBag.District İlçesi Durum Sayfası</h1>
    </div>
</div>

@if (TempData["status"] != null)
{
    <div class="row">
        <div class="col-md-3 offset-md-4 alert alert-success text-center" role="alert">
            @TempData["status"]
        </div>
    </div>

}
<style>

    a:link {
        text-decoration: none;
    }

    a:visited {
        text-decoration: none;
    }

    a:hover {
        text-decoration: none;
    }

    a:active {
        text-decoration: none;
    }

</style>
<a class="btn btn-secondary" role="button" asp-controller="KgysRequested" asp-action="DistrictCreateExcel" asp-route-Id="@ViewBag.Id">Excele Aktar</a>


<div class="offset-10 form-group pull-right mb-3">
    <input type="text" class="search form-control" placeholder="Aranılacak Kelimeyi Giriniz" style="width:300px">
    <span class="counter pull-right"></span>
</div>


<table class="table table-striped table-hover text-center table-bordered results" id="dataTable">
    <thead style="text-align:center">
        <tr class="table-light">
            <th style=" max-width:1px; text-align:center">Sıra No</th>
            <th>Mevcut KGYS Noktaları </th>
            <th>Mevcut PTS Noktaları </th>
            <th>Planlanan KGYS Noktaları</th>
            <th>Planlanan PTS Noktaları</th>
            <th>Talep Edilen KGYS Noktaları</th>
            <th>Talep Edilen PTS Noktaları</th>
            <th>İşlem</th>
           
        </tr>
        <tr class="warning no-result">
            <td colspan="4"><i class="fa fa-warning"></i> No result</td>
        </tr>
    </thead>
    <tbody style="text-align:center">
        @foreach (var modell in ViewBag.KgysPlanned)
        {

            <tr>
                @if (ViewBag.District == modell.District)
                {
                    i++;
                    <th scope="row">@i</th>
                    <td>

                        @if (ViewBag.District == modell.District && modell.LastStatus == "Mevcut" && modell.RequestType == "KGYS")
                        {
                            <a role="button" asp-controller="KgysRequested" asp-action="KgysPlannedDetails" asp-route-id="@modell.Id"> @modell.KgysName</a>
                        }
                        else
                        {
                            @yok
                        }

                    </td>
                    <td>

                        @if (ViewBag.District == modell.District && modell.LastStatus == "Mevcut" && modell.RequestType == "PTS")
                        {
                            <a role="button" asp-controller="KgysRequested" asp-action="KgysPlannedDetails" asp-route-id="@modell.Id"> @modell.KgysName</a>
                        }
                        else
                        {
                            @yok
                        }

                    </td>
                    <td>

                        @if (ViewBag.District == modell.District && modell.LastStatus == "Planlanan" && modell.RequestType == "KGYS")
                        {
                            <a role="button" asp-controller="KgysRequested" asp-action="KgysPlannedDetails" asp-route-id="@modell.Id"> @modell.KgysName</a>
                        }
                        else
                        {
                            @yok
                        }

                    </td>
                    <td>

                        @if (ViewBag.District == modell.District && modell.LastStatus == "Planlanan" && modell.RequestType == "PTS")
                        {
                            <a role="button" asp-controller="KgysRequested" asp-action="KgysPlannedDetails" asp-route-id="@modell.Id"> @modell.KgysName</a>
                        }
                        else
                        {
                            @yok
                        }

                    </td>
                    <td>

                        @if (ViewBag.District == modell.District && modell.LastStatus == "Talep" && modell.RequestType == "KGYS")
                        {
                            <a role="button" asp-controller="KgysRequested" asp-action="KgysRequestDetails" asp-route-id="@modell.Id"> @modell.KgysName</a>
                        }
                        else
                        {
                            @yok
                        }

                    </td>
                    <td>
                        @if (ViewBag.District == modell.District && modell.LastStatus == "Talep" && modell.RequestType == "PTS")
                        {
                            <a role="button" asp-controller="KgysRequested" asp-action="KgysRequestDetails" asp-route-id="@modell.Id"> @modell.KgysName</a>
                        }
                        else
                        {
                            @yok
                        }
                    </td>
                
                    <td>

                    </td>
                }
            </tr>
        }

        @foreach (var modell in ViewBag.Request)
        {

            <tr>
                @if (ViewBag.District == modell.District)
                {
                    i++;
                    <th scope="row">@i</th>
                    <td>

                        @if (ViewBag.District == modell.District && modell.LastStatus == "Mevcut" && modell.RequestType == "KGYS")
                        {
                            <a role="button" asp-controller="KgysRequested" asp-action="KgysPlannedDetails" asp-route-id="@modell.Id"> @modell.KgysName</a>
                        }
                        else
                        {
                            @yok
                        }

                    </td>
                    <td>

                        @if (ViewBag.District == modell.District && modell.LastStatus == "Mevcut" && modell.RequestType == "PTS")
                        {
                            <a role="button" asp-controller="KgysRequested" asp-action="KgysPlannedDetails" asp-route-id="@modell.Id"> @modell.KgysName</a>
                        }
                        else
