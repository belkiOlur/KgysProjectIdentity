@using System.Security.Claims;
<li class="nav-item">
    @if (User.Identity!.IsAuthenticated)
    {
        <div class="btn-group btn-dark">
            <button class="btn btn-dark dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                @User.Identity.Name
            </button>
            <ul class="dropdown-menu" style="background-color:black">
                @if(User.HasClaim(x=>x.Type==ClaimTypes.Role && x.Value=="Admin"))
                {
                    <li><a class="nav-link text-light" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin Sayfası</a></li>
                }
                <li><a class="nav-link text-light" asp-area="" asp-controller="Member" asp-action="PasswordChange">Şifre Değiştir</a></li>
            </ul>
        </div>
        <a type="button" class="btn btn-dark " asp-route-returnurl="/Home/Index" asp-controller="Member" asp-action="Logout">Çıkış Yap</a>
    }
    else
    {
        <a type="button" class="btn btn-dark" asp-area="" asp-controller="Home" asp-action="SignIn">Giriş Yap</a>
    }


</li>