@{
    Layout = null;
    int i = 0;
}
@model List<WaitingJobsViewModel>
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <title>Isler @DateTime.Now.ToString()</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/images/cop.ico" /> @*site iconu değiştirir*@
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="~/css/buttons.bootstrap4.min.css">
    <link rel="stylesheet" href="~/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KgysProjectIdentity.Web.styles.css" asp-append-version="true" />
</head>
<body class="container-responsive">
    <div class="row">
        <div class="container-fluid">
            <header>
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black border-bottom box-shadow mb-3">
                    <div class="container-fluid">
                        <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">BTH Proje Takip</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1">

                                <partial name="_navBarDropBox"></partial>

                                <partial name="_navBarKgysRequestedMenu"></partial>

                            </ul>
                            @*navbar partial view*@
                            <partial name="_navBarLoginMenu"></partial>
                        </div>
                    </div>
                </nav>
            </header>
        </div>
    </div>

    <table id="example" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
        <thead>
            <tr>
                <th>Sıra No</th>
                <th>EBYS Numarası</th>
                <th>Geliş Tarihi</th>
                <th>Konusu</th>
                <th>Yazan Birim</th>
                <th>Özet</th>
                <th>Büro Amiriyle Görüşüldü Mü</th>
                <th>Amir Talimatı</th>
                <th>Tamamlandı mı?</th>
                <th>Kullanılan/Gerekli Malzeme</th>
                <th>İşin Bitiş Tarihi</th>
                <th>Cevap Yazıldı Mı?</th>
                <th>İşin Durumu</th>
                <th>Güncellenme Tarihi</th>
                <th>Güncelleyen Personel</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                    string sexc = TableRowsColor.RowsColor(item.TalkToManager!);
                    string sbas = TableRowsColor.RowsColor(item.Status!);
                    string sepmys = TableRowsColor.RowsColor(item.FinishOrNot!);
                    string smplso = TableRowsColor.RowsColor(item.Answer!);

                    i++;
                    <tr>
                        <td>@i</td>
                        <td>@item.EbysNumber</td>
                        <td>@item.ArrivalDate</td>
                        <td>@item.Subject</td>
                        <td>@item.District</td>
                        <td>@item.Summary</td>
                        <td class="@sexc">@item.TalkToManager</td>
                        <td>@item.StatusMessage</td>
                        <td class="@sepmys">@item.FinishOrNot</td>
                        <td>@item.Material</td>
                        <td>@item.FinishDate</td>
                        <td class="@smplso">@item.Answer</td>
                        <td class="@sbas">@item.Status</td>
                        <td>@item.UpdatedTime</td>
                        <td>@item.UpdatedUser</td>
                    </tr>
            }
        </tbody>
    </table>
</body>
</html>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/jquery-3.7.0.min.js" type="text/javascript"></script>
<script src="~/js/slick.js"></script>
<script src="~/js/jquery-3.5.1.js"></script>
<script src="~/js/jquery.dataTables.min.js"></script>
<script src="~/js/dataTables.bootstrap5.min.js"></script>
<script src="~/js/dataTables.buttons.min.js"></script>
<script src="~/js/buttons.bootstrap4.min.js"></script>
<script src="~/js/jszip.min.js"></script>
<script src="~/js/pdfmake.min.js"></script>
<script src="~/js/vfs_fonts.js"></script>
<script src="~/js/buttons.html5.min.js"></script>
<script src="~/js/buttons.print.min.js"></script>
<script src="~/js/buttons.colVis.min.js"></script>
<script src="~/js/dataTables.responsive.min.js"></script>
<script src="~/js/responsive.bootstrap4.min.js"></script>
<script>
    $(document).ready(function () {
        var table = $('#example').DataTable({
            lengthChange: true,
            buttons: ['excel', 'colvis']
        });

        table.buttons().container().appendTo('#example_wrapper .col-md-6:eq(0)');
    });
</script>
