
@{
    ViewData["Title"] = "UserEdit";
}

<h1>UserEdit</h1>

@model KgysProjectIdentity.Core.ViewModels.UserEditViewModel

@section Scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


<div class="row">
    <div class="col-md-4 offset-md-4">
        <h2>Kullanıcı Kayıt Formu</h2>
        @if (TempData["SuccessMassage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMassage"]
            </div>
        }
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        @*Resim dosyası olduğu için enctype="multipart/form-data" eklenecek*@
        <form asp-controller="Member" asp-action="UserEdit" method="post" enctype="multipart/form-data">
         <input type="hidden" asp-for="Id"/>
            <div class="row mb-3">
                <label for="UserName" class="col-sm-4 col-form-label" asp-for="UserName"></label>
                <div class="col-sm-8">
                    <input asp-for="UserName" class="form-control">
                    <span class="text-danger" asp-validation-for="UserName"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label for="FullName" class="col-sm-4 col-form-label" asp-for="FullName"></label>
                <div class="col-sm-8">
                    <input asp-for="FullName" class="form-control">
                    <span class="text-danger" asp-validation-for="FullName"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="Email" class="col-sm-4 col-form-label" asp-for="Email"></label>
                <div class="col-sm-8">
                    <input asp-for="Email" class="form-control">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="Picture" class="col-sm-4 col-form-label" asp-for="Picture"></label>
                <div class="col-sm-8">
                    <input type="file" asp-for="Picture" class="form-control"> @*Resim ekleneceği için type="file olması lazım*@
                    <span class="text-danger" asp-validation-for="Picture"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-8 offset-md-4">
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </div>
            </div>
        </form>
    </div>
</div>