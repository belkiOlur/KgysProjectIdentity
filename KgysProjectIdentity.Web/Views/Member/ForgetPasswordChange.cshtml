@{
    ViewData["Title"] = "ForgetPasswordChange";
}
@model SecurityCodeViewModel
<div class="row">
    <div class="col-md-4 offset-md-4">
        <h2> Şifre Değiştirme Sayfasına Hoşgeldiniz</h2>

        @if (TempData["SuccessMassage"] != null)
        {
            <div class="alert alert-success text-center" role="alert">
                @TempData["SuccessMassage"]
            </div>

        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-success text-center" role="alert">
                @TempData["Error"]
            </div>

        }

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        <form asp-controller="Member" asp-action="ForgetPasswordChange" method="post">
            <div class="row mb-3">
                <label for="PasswordOld" class="col-sm-4 col-form-label" asp-for="PasswordOld"></label>
                <div class="col-sm-8">
                    <input asp-for="PasswordOld" class="form-control">
                    <span class="text-danger" asp-validation-for="PasswordOld"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label for="PasswordNew" class="col-sm-4 col-form-label" asp-for="PasswordNew"></label>
                <div class="col-sm-8">
                    <input asp-for="PasswordNew" class="form-control">
                    <span class="text-danger" asp-validation-for="PasswordNew"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label for="PasswordNewConfirm" class="col-sm-4 col-form-label" asp-for="PasswordNewConfirm"></label>
                <div class="col-sm-8">
                    <input asp-for="PasswordNewConfirm" class="form-control">
                    <span class="text-danger" asp-validation-for="PasswordNewConfirm"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-8 offset-md-4">
                    <button type="submit" class="btn btn-primary"> Kaydet </button>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
