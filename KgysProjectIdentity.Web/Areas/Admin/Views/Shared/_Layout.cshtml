<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>K.I.T.A.P</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/images/cop.ico" /> @*site iconu değiştirir*@
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="~/js/jquery.slim.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    @* <script src="~/js/multiselect-dropdown.js"></script>*@
    <link rel="stylesheet" href="~/css/bootstrap-multiselect.css" rel="stylesheet" />
    <script type="text/javascript" src="~/js/bootstrap-multiselect.js"></script>
    <link href="~/css/baguettebox.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/KgysProjectIdentity.Web.styles.css" asp-append-version="true" />
</head>
<body class="container-responsive">
    <div class="row">
        <div class="container-fluid">
            <header>
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black border-bottom box-shadow mb-3">
                    <div class="container-fluid">
                        <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">BTH Proje Takip</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-ligth" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin Anasayfa</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-ligth" asp-area="Admin" asp-controller="Home" asp-action="Log">Logları Gör</a>
                                </li>
                                <partial name="_navBarDropBox"></partial>

                                <partial name="_navBarKgysRequestedMenu"></partial>

                            </ul>
                            @*navbar partial view*@
                            <partial name="_navBarLoginMenu"></partial>
                        </div>
                    </div>
                </nav>
            </header>
        </div>
    </div>
    <div class="container-fluid">
        <main role="main">
            @RenderBody()
        </main>
    </div>


    <footer class="container-fluid border-top footer text-muted bg-black" style="overflow-x:auto">
        <div class="container text-light text-center" style="font-size:revert;">
            &copy; 2023 Bilgi Teknolojileri Ve Haberleşme Şube Müdürlüğü Projeleri Takip Platformudur.
        </div>
    </footer>

    <script>
        $(document).ready(function () {
            $('#btnSubmit').click(function () {
                $('.spinner').css('display', 'block');
            });
        });
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/jquery-3.7.0.min.js" type="text/javascript"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
